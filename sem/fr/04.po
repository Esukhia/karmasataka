msgid "བཅོམ་ལྡན་འདས་ ཀྱིས་ གསུངས་པ་ ལ་ མངོན་པར་ བསྟོད་ དེ །"
msgstr "il loua les propos du Bienheureux,"

msgctxt "9bd3f2b569494bb5aa918df6bf7b45ad"
msgid "རྗེས་སུ་ ཡི་ རང་ ནས་"
msgstr "s'en réjouit et"

msgctxt "ab6bceb112044635ba81e136a555e3a5"
msgid "བཅོམ་ལྡན་འདས་ ཀྱི་ ཞབས་ ལ་མགོ་ བོས་ ཕྱག་ འཚལ་ ཏེ །"
msgstr ""
"il se prosterna devant le Bienheureux en touchant ses pieds de sa tête et"

msgctxt "c00c41cc4052496eb48412943c090b60"
msgid "བཅོམ་ལྡན་འདས་ ཀྱི་ ཐད་ ནས་ སོང་ ངོ་ ། །"
msgstr "il partit de devant le Bienheureux."

msgctxt "a033ef2a2cc3423389dce3ce440ec80b"
msgid ""
"དེ་ནས་ དེ␣ས་ དེ་ཉིད་ ཀྱི་ མཚན་མོ་ བཟའ་བ་ དང་ བཅའ་བ་ གཙང་མ་ བཟང་པོ་ མང་པོ་ "
"སྦྱར་ ནས་"
msgstr ""
"Alors, cette nuit-là, il prépara de nombreux mets et condiments purs et "
"nobles et"

msgctxt "d412b3c277534548a72f216e81a329ac"
msgid "ནང་པ␣ར་ སྔར་ ལངས་ ཏེ་"
msgstr "se leva tôt le lendemain et"

msgctxt "3cf0441971154e29b107bbcc851c7a7c"
msgid "གདན་ བཤམས་ ནས་"
msgstr "disposa les coussins et"

msgctxt "066998bbe1bb42679043c682603718e9"
msgid "ཕྱག་ ཆབ་ ཀྱི་ ཆུ་ར་ བཀང་ སྟེ །"
msgstr "remplit le récipient d'eau pour les mains et"

# བཅོམ་ལྡན་འདས་ལ་ཕྲིན་<«ཞོལ་»འཕྲིན།>གྱིས་གདུགས་ཚོད་བསྐུལ་བ།
msgctxt "b1cb7fe6d3324694a349e0a0179e03a7"
msgid "བཅོམ་ལྡན་འདས་ ལ་ ཕྲིན་ གྱིས་ གདུགས་ཚོད་ བསྐུལ་བ །"
msgstr "il envoya un messager convier (lit. inciter) le Bienheureux : «"

msgctxt "04be3777a8c140969d7a46b2a69165bb"
msgid "བཙུན་པ་"
msgstr "Vénérable,"

msgctxt "5c2db383e04c41c8ad8b84f11df61461"
msgid "གདུགས་ཚོད་ ལ་ བབ་ སྟེ་"
msgstr "La mi-journée arrive, donc"

msgctxt "a614598972254160ab9bc0ff74d29ba5"
msgid "བཤོས་ གསོལ་ ལགས་ ན །"
msgstr "puisque c'est [l'heure] du repas,"

